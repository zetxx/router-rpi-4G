{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Logger",
            "program": "${workspaceFolder}/Nodes/Logger/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--discovery.domain=borovica4g",
                "--api.port=9000",
                "--discovery.loopback=false"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Modem",
            "program": "${workspaceFolder}/Nodes/Modem/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--discovery.domain=borovica4g",
                "--api.port=9001",
                "--discovery.loopback=false",
                "--log.level=trace",
                "--httpClient.uri=http://10.21.21.1",
                // debug props
                "--http.timeout=2000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NetProvider",
            "program": "${workspaceFolder}/Nodes/NetProvider/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--discovery.domain=borovica4g",
                "--api.port=9002",
                "--discovery.loopback=false",
                "--log.level=trace",
                "--httpClient.uri=http://data.vivacom.bg",
                // debug props
                "--http.timeout=2000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "OnlineChecker",
            "program": "${workspaceFolder}/Nodes/onlineChecker/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--discovery.domain=borovica4g",
                "--api.port=9003",
                "--discovery.loopback=false",
                "--log.level=trace",
                "--onlineChecker.checkInterval=5000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "program": "${workspaceFolder}/rp.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        }
    ],
    "compounds": [
        {
            "name": "OnlineChecker + Modem",
            "configurations": ["OnlineChecker", "Modem"]
        }
    ]
}