    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Logger",
            "program": "${workspaceFolder}/microservices/Logger/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9000",
                "--resolve.loopback=false"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Modem",
            "program": "${workspaceFolder}/microservices/Modem/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9001",
                "--resolve.loopback=false",
                "--log.level=trace",
                "--modem.uri=http://10.21.21.1",
                // debug props
                "--http.timeout=2000",
                "--modem.triggerEventTimeout=5000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NetProvider",
            "program": "${workspaceFolder}/microservices/NetProvider/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9002",
                "--resolve.loopback=false",
                "--log.level=trace",
                "--netProvider.uri=http://data.vivacom.bg",
                // debug props
                "--http.timeout=2000",
                "--netProvider.triggerEventTimeout=5000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "OnlineChecker",
            "program": "${workspaceFolder}/microservices/OnlineChecker/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9003",
                "--resolve.loopback=false",
                "--log.level=trace",
                "--onlineChecker.checkInterval=5000"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Storage",
            "program": "${workspaceFolder}/microservices/Storage/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9004",
                "--resolve.loopback=false",
                "--log.level=trace",
                "--storage.user=rpi4g",
                "--storage.password=123",
                "--storage.database=rpi4g",
                "--storage.schema=rpi4g"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ScreenControl",
            "program": "${workspaceFolder}/microservices/ScreenControl/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "args": [
                "--resolve.domain=borovica4g",
                "--api.port=9005",
                "--resolve.loopback=false",
                "--log.level=trace",
                "--screenControl.refreshInterval=60000",
                "--screenControl.gpio.rst=0",
                "--screenControl.gpio.dc=0",
                "--resolve.nodeName=4g-screen-control",
                "--screenControl.screenshot.uri=http://localhost:34523/screen.html?port=9005",
                "--screenControl.screenshot.storeDir=./"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "program": "${workspaceFolder}/play/index.js",
            "outputCapture": "std",
            "protocol": "inspector",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy"
            ],
            "env": {
                "NODE_PATH": "./dev"
            }
        }
    ],
    "compounds": [
        {
            "name": "Storage + ScreenControl",
            "configurations": ["ScreenControl", "Storage"]
        }
    ]
}